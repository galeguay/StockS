<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stocks">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyAplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".ui.ActInfoProducto"></activity>
        <activity android:name=".ui.ActAgregarLinea" />
        <activity android:name=".ui.ActAgregarPrestamo" />
        <activity android:name=".ui.ActAgregarVenta" />
        <activity android:name=".ui.ActAgregarProducto" />
        <activity android:name=".ui.ActAgregarCompra" />
        <activity
            android:name=".ui.ActAgregarMovimiento"
            android:launchMode="singleInstance" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>