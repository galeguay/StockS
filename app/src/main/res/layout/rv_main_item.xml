<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/MA_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#FF000000"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tIRCantidad"
                    style="@style/AudioFileInfoOverlayText"
                    android:background="@drawable/item_extra"
                    android:layout_width="45dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="7dp"
                    android:gravity="center"
                    android:text="99"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:id="@+id/LL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tIRCantidad"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/MA_text_NombreProducto"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:maxHeight="50dp"
                        android:background="@drawable/item_recycler_esquina_sd_redondeada"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="NOMBRE DE PRODUCTO XJAJDNJEJD"
                        android:singleLine="false"
                        android:autoSizeTextType="uniform"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/MA_text_CodigoProducto"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:background="@drawable/item_recycler_esquina_id_redondeada"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="CODIGO DE PRODUCTO"
                        android:autoSizeTextType="uniform"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
